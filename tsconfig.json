{
    "compilerOptions": {
        "target": "es2015",
        "module": "es2015",
        "moduleResolution": "node",
        "removeComments": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "sourceMap": true,
        "declarationDir": "lib",
        "outDir": "lib",
        "allowSyntheticDefaultImports": false,
        "noImplicitAny": true,
        "strict": true,
        "declaration": true,
        "typeRoots": [
            "node_modules/@types"
        ]
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules",
        "lib"
    ]
}