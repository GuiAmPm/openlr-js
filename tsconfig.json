{
    "compilerOptions": {
        "moduleResolution": "node",
        "sourceMap": true,
        "allowSyntheticDefaultImports": false,
        "noImplicitAny": true,
        "strict": true,
        "declaration": true,
        "typeRoots": [
            "node_modules/@types"
        ],
        "lib": ["es2015", "es2015.core"],
        "target": "es5"
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules",
        "lib"
    ]
}