{
    "compilerOptions": {
        "moduleResolution": "node",
        "removeComments": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "sourceMap": true,
        "declarationDir": "lib-types",
        "allowSyntheticDefaultImports": false,
        "noImplicitAny": true,
        "strict": true,
        "declaration": true,
        "typeRoots": [
            "node_modules/@types"
        ],
        "lib": ["es2015", "es2015.core"]
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules",
        "lib"
    ]
}